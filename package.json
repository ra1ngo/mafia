{
  "name": "mafia",
  "version": "1.0.0",
  "private": false,
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev:client": "concurrently  -c \"auto\" --prefix \"{time}-{pid}\" \"npm run build:server && npm run start:server\" \"webpack serve --config webpack.client.js\"",
    "dev:server": "concurrently  -c \"auto\" --prefix \"{time}-{pid}\" \"webpack --watch --config ./webpack.server.js\" \"nodemon dist/server.js\"",
    "build:server": "rm -rf dist && webpack build --config ./webpack.server.js",
    "start:server": "node dist/server.js",
    "lint:fix": "eslint --fix --ext \".ts,.js\" --ignore-path .eslintignore .",
    "prepare": "npx husky install",
    "release:pre": "npm version prerelease",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "lodash": "^4.17.21",
    "phaser": "^3.55.2",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.0.0",
    "svelte": "^3.31.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/lodash": "^4.14.169",
    "@types/node": "^18.11.17",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^7.6.0",
    "css-loader": "^5.0.1",
    "dotenv-webpack": "^7.0.3",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.3.8",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^1.3.4",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "svelte-loader": "^3.0.0",
    "ts-loader": "^9.2.4",
    "typescript": "^4.9.4",
    "webpack": "5.21.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
