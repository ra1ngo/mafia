{
  "compilerOptions": {
    "target": "es5",
    "rootDirs": ["./src/server"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
    ],
    "lib": [
      "es6"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules",
    "src/client/**/*"
  ]
}